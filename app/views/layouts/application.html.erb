<!DOCTYPE html>
<html>
<head>
  <title>Count Me In!</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<!-- START_HIGHLIGHT -->
<body class='<%= controller.controller_name %>'>
<div id="container">
	<div id="menu">
		<div class="left">
			<%= link_to "Home", home_path %>
			<% if current_user %>
				<%= link_to "Gallery", :controller => 'gallery', :action => 'index'%>
				<%= link_to "Incidents", :controller => 'analysis', :action => 'index'%>
				<%= link_to "Log out", :controller => 'sessions', :action => 'logout' %>
			<% end %>
		</div>
		<% if current_user %>
			<div class="right">
				<div class="search_form">
					<%= form_tag :controller => 'gallery', :action => 'index' do %>
						<%= check_box_tag :search_motiondetection, "1", false %>
		  				<%= text_field_tag :search, params[:search], :id => 'start_date', :placeholder => "Select Date" %>
	    				<%= submit_tag "Go", :name => nil %>
					<% end %>
				</div>
			</div>
			<div class="clear"></div>
		<% end %>
	</div>

	<div id="content">
		<div id="bigmain"><%= yield %></div>
	</div>
	<div class="clear_container"></div>
	<div id="footer"></div>
</div>
</body>
</html>