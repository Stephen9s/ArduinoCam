<!DOCTYPE html>
<html>
<head>
  <title>Mobile</title>
  <%= stylesheet_link_tag    "application_mobile" %>
  <%= javascript_include_tag "application_mobile" %>
  <%= csrf_meta_tags %>
  
  <meta name="viewport" content="width=device-width; initial-scale=1; maximum-scale=1.0; user-scalable=0;">
</head>
<body>
<div data-role="page">

	<div data-role="header">
		<%= link_to "Home", {:controller => 'sessions', :action => 'home'} %>
			<h1>Arduino Cam</h1>
	</div><!-- /header -->

	<div data-role="content">
		<p><%= yield %></p>
	</div><!-- /content -->

	<div data-role="footer" data-id="foo1" data-position="fixed">
		<% if current_user %>
			<div data-role="navbar">
				<ul>	
					<li><%= link_to "Gallery", :controller => 'gallery', :action => 'index' %></li>
					<li><%= link_to "Incidents", :controller => 'analysis', :action => 'index' %></li>
					<li><%= link_to "Log out", :controller => 'sessions', :action => 'logout' %></li>
				</ul>
			</div><!-- /navbar -->
		<% end %>
	</div>
</div><!-- /page -->
</body>
</html>